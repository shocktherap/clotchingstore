<h3><i class="fa fa-angle-right"></i> Product color</h3>
<div class="row mt">
  <div class="col-lg-12">
    <div class="content-panel">
      <section id="unseen">
        <div class="unseen-margin">
          <%= page_entries_info @colors %>
          <%= link_to 'New', new_backend_color_path, class: 'btn btn-theme03 pull-right button-margin' %>
          <table class="table table-bordered table-striped table-condensed">
            <thead>
              <tr>
                <th>Name</th>
                <th>Hex</th>
                <th>Color</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% @colors.each_with_index do |color| %>
                <tr>
                  <td><%= link_to color.name, backend_color_path(color) %></td>
                  <td><%= color.hex %></td>
                  <td>
                    <div style="background-color: <%= "##{ color.hex}" %>;height:15px;width:15px;"></div>
                  </td>
                  <td>
                    <%= link_to edit_backend_color_path(color), class: 'btn btn-primary btn-xs' do %>
                      <i class="fa fa-pencil"></i>
                    <% end %>
                    <%= link_to backend_color_path(color), method: :delete,class: 'btn btn-danger btn-xs',data: { confirm: 'Are you sure to delete?' } do %>
                      <i class="fa fa-trash-o "></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= paginate @colors %>
        </div>
      </section>
    </div>
  </div>
</div>
