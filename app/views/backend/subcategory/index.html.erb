<h3><i class="fa fa-angle-right"></i> Product Subcategory</h3>
<div class="row mt">
  <div class="col-lg-12">
    <div class="content-panel">
      <section id="unseen">
        <div class="unseen-margin">
          <%= page_entries_info @categories %>
          <table class="table table-bordered table-striped table-condensed">
            <thead>
              <tr>
                <th>Name</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% @subcategories.each_with_index do |subcategory| %>
                <tr>
                  <td><%= subcategory.name %></td>
                  <td>
                    <%= link_to edit_backend_category_subcategory_path(category_id: subcategory.category_id, id: subcategory), class: 'btn btn-primary btn-xs' do %>
                      <i class="fa fa-pencil"></i>
                    <% end %>
                    <%= link_to backend_category_subcategory_path(subcategory.category_id, subcategory), method: :delete,class: 'btn btn-danger btn-xs',data: { confirm: 'Are you sure to delete?' } do %>
                      <i class="fa fa-trash-o "></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= paginate @categories %>
        </div>
      </section>
    </div>
  </div>
</div>
