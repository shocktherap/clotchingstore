<h3><i class="fa fa-angle-right"></i> Product Category</h3>
<div class="row mt">
  <div class="col-lg-12">
    <div class="content-panel">
      <section id="unseen">
        <div class="unseen-margin">
          <%= page_entries_info @categories %>
          <%= link_to 'New', new_backend_category_path, class: 'btn btn-theme03 pull-right button-margin' %>
          <table class="table table-bordered table-striped table-condensed">
            <thead>
              <tr>
                <th>Name</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% @categories.each_with_index do |category| %>
                <tr>
                  <td><%= link_to category.name, backend_category_path(category) %></td>
                  <td>
                    <%= link_to edit_backend_category_path(category), class: 'btn btn-primary btn-xs' do %>
                      <i class="fa fa-pencil"></i>
                    <% end %>
                    <%= link_to backend_category_path(category), method: :delete,class: 'btn btn-danger btn-xs',data: { confirm: 'Are you sure to delete?' } do %>
                      <i class="fa fa-trash-o "></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= paginate @categories %>
        </div>
      </section>
    </div>
  </div>
</div>
