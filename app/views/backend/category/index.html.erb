<h3><i class="fa fa-angle-right"></i> Product Category</h3>
<div class="row mt">
  <div class="col-lg-12">
    <div class="content-panel">
      <section id="unseen">
        <div class="unseen-margin">
          <%= link_to 'New', new_backend_category_path, class: 'btn btn-theme03 pull-right button-margin' %>
          <table class="table table-bordered table-striped table-condensed">
            <thead>
              <tr>
                <th>Name</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% @categories.each_with_index do |category| %>
                <tr>
                  <td><%= link_to category.name, backend_category_path(category) %></td>
                  <td>
                    <%= link_to 'Edit', edit_backend_category_path(category) %>
                    <%= link_to 'Delete', backend_category_path(category), method: :delete, data: { confirm: 'Are you sure to delete?' } %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </section>
    </div>
  </div>
</div>
