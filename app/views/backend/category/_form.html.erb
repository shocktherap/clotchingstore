<%= form_failure_message @category %>

<%= form_for @category,url: @category.new_record? ? backend_category_index_path : backend_category_path(@category) ,html: { role: 'form' } do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Category Name' %>
  </div>

  <div class="form-group">
    <%= f.submit 'Save', class: 'btn btn-primary' %>
    <%= link_to 'Back', backend_category_index_path, class: 'btn btn-default' %>
  </div>
<% end %>
