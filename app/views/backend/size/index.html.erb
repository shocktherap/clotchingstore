<h3><i class="fa fa-angle-right"></i> Product Size</h3>
<div class="row mt">
  <div class="col-lg-12">
    <div class="content-panel">
      <section id="unseen">
        <div class="unseen-margin">
          <%= page_entries_info @sizes %>
          <%= link_to 'New', new_backend_size_path, class: 'btn btn-theme03 pull-right button-margin' %>
          <table class="table table-bordered table-striped table-condensed">
            <thead>
              <tr>
                <th>Name</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% @sizes.each_with_index do |size| %>
                <tr>
                  <td><%= link_to size.name, backend_size_path(size) %></td>
                  <td>
                    <%= link_to edit_backend_size_path(size), class: 'btn btn-primary btn-xs' do %>
                      <i class="fa fa-pencil"></i>
                    <% end %>
                    <%= link_to backend_size_path(size), method: :delete,class: 'btn btn-danger btn-xs',data: { confirm: 'Are you sure to delete?' } do %>
                      <i class="fa fa-trash-o "></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= paginate @sizes %>
        </div>
      </section>
    </div>
  </div>
</div>
