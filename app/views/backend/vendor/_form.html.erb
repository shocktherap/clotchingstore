<%= form_failure_message @merk %>

<%= form_for @merk,url: @merk.new_record? ? backend_vendor_index_path : backend_vendor_path(@merk) ,html: { role: 'form' } do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', placeholder: 'merk Name' %>
  </div>

  <div class="form-group">
    <%= f.submit 'Save', class: 'btn btn-primary' %>
    <%= link_to 'Back', backend_vendor_index_path, class: 'btn btn-default' %>
  </div>
<% end %>
